-# frozen_string_literal: true
= simple_form_for(@profile_user) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :profile
    = f.association :user

  .form-actions
    = f.button :submit
